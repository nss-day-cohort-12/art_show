@model art_gallery.ViewModel.ArtDetailViewModel

@{
    ViewBag.Title = "IndividualPieceView";
}

<div class="row">
@foreach (var item in Model.ArtListings)
{
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2>@item.Title</h2>
    <div><a href="@Url.Action("IndividualPieceView", "Home", new { ArtWorkId = @item.ArtWorkId })"><img src="@item.Image" alt="@item.Title" /></a></div>
    <div>@item.Dimensions</div>
    <div>@item.Price</div>
    <div>@item.NumberInInventory</div>
    <div>@item.Location</div>
    <div><a href="@item.PurchaseURL">Buy this art</a></div>
  </div>
  <div class="col-md-3"></div>
}
</div>
