@model art_gallery.ViewModel.ArtDetailViewModel

<div class="row">
@foreach (var item in Model.ArtListings)
{
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2>@item.Title</h2>
    <div><a href="@Url.Action("IndividualPieceView", "Home", new { ArtWorkId = @item.ArtWorkId })"><img src="@item.Image" alt="@item.Title" /></a></div>
    <div>Dimensions: @item.Dimensions</div>
    <div>$@item.Price</div>
    <div>There are only @item.NumberInInventory of this item remaining.</div>
    <h4><a href="@item.PurchaseURL">Buy this art NOW!</a></h4>
    <div>You can view this piece at @item.Location</div>
  </div>
  <div class="col-md-3"></div>
}
</div>
